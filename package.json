{
    "name": "gom-assets",
    "private": true,
    "scripts": {
        "build:css": "postcss \"src/css/*.css\" --dir dist",
        "build:ovr": "postcss \"src/css/*.css\" --dir src/css-overrides-devtool",
        "watch:css": "chokidar \"src/css/*.css\" -c \"npm run build:css\"",
        "build": "npm run build:css",
        "build:css:ps1": "powershell -NoProfile -ExecutionPolicy Bypass -File tools/build-css.ps1",
        "build:ovr:ps1": "powershell -NoProfile -ExecutionPolicy Bypass -File tools/build-ovr.ps1",
        "dev:push": "npm run build:css:ps1 && git add -A && (git diff --cached --quiet || git commit -m \"dev\") && git push origin main && powershell -NoProfile -ExecutionPolicy Bypass -File tools/purge-jsdelivr.ps1 -Ref main",
        "release": "powershell -NoProfile -ExecutionPolicy Bypass -File tools/release-tag.ps1",
        "tags:purge": "powershell -NoProfile -ExecutionPolicy Bypass -File tools/purge-tags.ps1"
    },
    "devDependencies": {
        "autoprefixer": "^10.4.20",
        "chokidar-cli": "^3.0.0",
        "cssnano": "^7.0.6",
        "npm-run-all": "^4.1.5",
        "postcss": "^8.4.49",
        "postcss-cli": "^11.0.0",
        "postcss-import": "^16.1.0"
    }
}
